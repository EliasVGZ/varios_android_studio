<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/darker_gray"
    android:gravity="center"
    android:orientation="horizontal">

    <TextView

        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:text="@string/conectar"
        android:textColor="#061A88"
        android:textSize="30dp"
        android:gravity="center"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">
        <!-- PRIMERA LETRA EN MAYUSCULA -->
        <EditText
            android:id="@+id/et_usuario"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_marginBottom="15dp"
            android:gravity=""
            android:hint="@string/usuario"
            android:inputType="textCapWords"
            android:textSize="20dp"></EditText>

        <EditText
            android:id="@+id/et_contrasena"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:gravity=""
            android:hint="@string/contrasena"
            android:inputType="textPassword"
            android:textSize="20dp"></EditText>

        <Button
            android:id="@+id/btn_iniciar"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_margin="30dp"
            android:backgroundTint="#68A3AA"
            android:padding="30dp"
            android:text="@string/iniciar_sesion2"
            android:textSize="20sp"></Button>

        <TextView
            android:id="@+id/forgotPasswordTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:autoLink="web"
            android:clickable="true"
            android:onClick="forgotPasswordClicked"
            android:text="@string/has_olvidado_tu_contrase_a" />

        <TextView
            android:id="@+id/tv_RespuestaAct2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="#FF9800"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:visibility="gone" />


    </LinearLayout>


</LinearLayout>
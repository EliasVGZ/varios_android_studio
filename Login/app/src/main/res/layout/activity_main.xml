<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@android:color/darker_gray"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/conectar"
        android:textSize="30dp"
        android:textColor="#061A88"
        android:layout_marginBottom="30dp"/>

    <!-- PRIMERA LETRA EN MAYUSCULA -->
    <EditText
        android:id="@+id/et_usuario"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginBottom="15dp"
        android:gravity=""
        android:hint="@string/usuario"
        android:textSize="20dp"
        android:inputType="textCapWords">
    </EditText>

    <EditText
        android:id="@+id/et_contrasena"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:hint="@string/contrasena"
        android:textSize="20dp"
        android:gravity=""
        android:inputType="textPassword">
    </EditText>
    <Button
        android:id="@+id/btn_iniciar"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="@string/iniciar_sesion2"
        android:textSize="20sp"
        android:layout_margin="30dp"
        android:padding="30dp"
        android:backgroundTint="#68A3AA">
    </Button>
    <TextView
        android:id="@+id/forgotPasswordTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/has_olvidado_tu_contrase_a"
        android:autoLink="web"
        android:clickable="true"
        android:onClick="forgotPasswordClicked"/>

    <TextView
        android:id="@+id/tv_RespuestaAct2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:layout_marginBottom="10dp"
        android:textColor="@color/black"
        android:background="#FF9800"
        android:visibility="gone"/>



</LinearLayout>
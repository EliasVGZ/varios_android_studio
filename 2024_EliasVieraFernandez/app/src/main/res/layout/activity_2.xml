<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/padding"
    android:background="@color/azulMedio">
    <LinearLayout
        android:id="@+id/ll_principal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/azulClaro"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="visible">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Teclea la formula"
            android:layout_margin="15dp"
            android:textSize="@dimen/letraTitular" />
        <EditText
            android:id="@+id/et_formula"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint=""
            android:inputType="textCapCharacters">

        </EditText>
        <Button
            android:id="@+id/btn_comprobar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="COMPROBAR"
            android:onClick="btnComprobar">

        </Button>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_radioButton"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/azulClaro"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Â¿Desea continuar?"
            android:layout_margin="15dp"
            android:textSize="@dimen/letraTitular" />
        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <RadioButton
                android:id="@+id/rb_si"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Si">
            </RadioButton>
            <RadioButton
                android:id="@+id/rb_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No">
            </RadioButton>
            <Button
                android:id="@+id/btn_continuar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="COMPROBAR"
                android:onClick="btnComprobar">
            </Button>
        </RadioGroup>

    </LinearLayout>

</LinearLayout>
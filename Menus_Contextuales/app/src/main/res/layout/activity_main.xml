<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="15dp">

    <TextView
        android:id="@+id/tv_etiqueta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Etiqueta con menu contextual"
        android:layout_margin="15dp"/>

    <!-- ELEMENTO listview, CARGA DATOS MEDIANTE ATRIBUTOS ENTRIES -->

    <ImageView
        android:id="@+id/iv_imagen"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/img_planeta">
    </ImageView>
    <Button
        android:id="@+id/btn_activity2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Activity 2">

    </Button>

</LinearLayout>